<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abucloud.mapper.UserInfoMapper">
    <insert id="insertUser">
        INSERT INTO `k-test-db`.`tb_user_info`
                (`user_id`, `login_account`, `password`, `username`, `dept_id`, `data_status`, `create_by`,
                 `create_time`,
                 `update_by`, `update_time`, `record_version`, `update_count`)
        VALUES (#{userId},
                #{loginAccount},
                #{password},
                #{username},
                #{deptId},
                #{dataStatus},
                #{createBy},
                #{createTime},
                #{updateBy},
                #{updateTime},
                #{recordVersion},
                #{updateCount})
    </insert>
    <insert id="insertOneUser">
    </insert>

    <update id="updateByConditions">
        UPDATE tb_user_info
        SET login_account = #{loginAccount}
        <where>
            <choose>
                <when test="dataStatus != null">
                    data_status = #{dataStatus}
                </when>
                <when test="username != null">
                    username = #{username}
                </when>
                <otherwise>
                    dept_id = #{deptId}
                </otherwise>
            </choose>
        </where>
    </update>

    <delete id="deleteUserById">
        DELETE
        FROM `tb_user_info`
        WHERE user_id = #{userId}
    </delete>

